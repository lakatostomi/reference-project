                <version>3.3.2</version>
                <configuration>
                    <to>
                        <image>gcr.io/basic-cabinet-408909/${project.name}:${project.version}</image>
                        <credHelper>gcr</credHelper>
                    </to>
                </configuration>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>build</goal>
                        </goals>
                    </execution>
